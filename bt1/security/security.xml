<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--   Tạo Group quyền cho Customer -->
        <record model="ir.module.category" id="customer_group_id">
            <field name="name">Customer Group</field>
            <field name="description">Customer Group</field>
            <field name="sequence">7</field>
        </record>

        <record id="group_customer_user" model="res.groups">
            <field name="name">Customer User</field>
            <field name="category_id" ref="bt1.customer_group_id"/>
        </record>

        <record id="group_customer_manager" model="res.groups">
            <field name="name">Customer Manager</field>
            <field name="category_id" ref="bt1.customer_group_id"/>
            <field name="implied_ids" eval="[(4, ref('bt1.group_customer_user'))]"/>
        </record>

        <!--   Tạo Group quyền cho order (order_manager) -->
        <record model="ir.module.category" id="order_group_id">
            <field name="name">Order Group</field>
            <field name="description">Order Group</field>
            <field name="sequence">7</field>
        </record>

        <record id="group_order_user" model="res.groups">
            <field name="name">Order User</field>
            <field name="category_id" ref="bt1.order_group_id"/>
        </record>

        <record id="group_order_manager" model="res.groups">
            <field name="name">Order Manager</field>
            <field name="category_id" ref="bt1.order_group_id"/>
            <field name="implied_ids" eval="[(4, ref('bt1.group_order_user'))]"/>
        </record>




    </data>
</odoo>